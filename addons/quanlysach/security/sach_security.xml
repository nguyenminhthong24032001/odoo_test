<odoo>
    <!-- Define the access control entries for the 'quanlysach_manager' group -->
    <record id="access_quanlysach_manager" model="ir.model.access">
        <field name="name">quanlysach_manager</field>
        <field name="model_id" ref="model_db_sach"/>
        <field name="group_id" ref="quanlysach_quanlysach_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Define the access control entries for the 'quanlysach_user' group -->
    <record id="access_quanlysach_user" model="ir.model.access">
        <field name="name">quanlysach_user</field>
        <field name="model_id" ref="model_db_sach"/>
        <field name="group_id" ref="quanlysach_quanlysach_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
